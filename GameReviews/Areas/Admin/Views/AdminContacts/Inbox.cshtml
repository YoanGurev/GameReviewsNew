@model GameReviews.Models.ViewModels.PaginatedList<GameReviews.Models.ContactForm>

@{
    ViewData["Title"] = "Admin Inbox";
}

<h2 class="text-light mb-4">Inbox</h2>

@if (!Model.Any())
{
    <p class="text-light">No messages yet.</p>
}
else
{
    <table class="table table-dark table-bordered table-hover rounded">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Subject</th>
                <th>Message</th>
                <th>Created</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var message in Model)
            {
                <tr>
                    <td>@message.Name</td>
                    <td>@message.Email</td>
                    <td>@message.Subject</td>
                    <td>@message.Message</td>
                    <td>@message.SubmittedAt.ToLocalTime().ToString("g")</td>
                    <td>
                        @if (message.IsRead)
                        {
                            <span class="badge bg-success">Read</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-white">Unread</span>
                        }
                    </td>
                    <td>
                        @if (!message.IsRead)
                        {
                            <form asp-action="MarkAsRead" asp-route-id="@message.Id" method="post">
                                <button class="btn btn-sm btn-outline-success" type="submit">Mark as Read</button>
                            </form>
                        }
                        else
                        {
                            <span class="text-muted">—</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <nav class="mt-4">
        <ul class="pagination justify-content-center">
            @if (Model.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Inbox" asp-route-page="@(Model.PageIndex - 1)">Previous</a>
                </li>
            }

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                    <a class="page-link" asp-action="Inbox" asp-route-page="@i">@i</a>
                </li>
            }

            @if (Model.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Inbox" asp-route-page="@(Model.PageIndex + 1)">Next</a>
                </li>
            }
        </ul>
    </nav>
}

