@{
    ViewData["Title"] = "Community Rules";
}

<div class="container my-5">
    <div class="text-center mb-4">
        <h1 class="display-4 fw-bold text-primary">Community Rules</h1>
        <p class="text-muted">A friendly reminder of how we keep GameReviews safe and fun for everyone.</p>
    </div>

    <div class="row g-4">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-chat-heart-fill text-danger" style="font-size: 2.5rem;"></i>
                    <h5 class="mt-3">Be Respectful</h5>
                    <p class="text-muted">Treat all members kindly. Discrimination, hate speech, or harassment will not be tolerated.</p>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-pencil-square text-primary" style="font-size: 2.5rem;"></i>
                    <h5 class="mt-3">Write Honest Reviews</h5>
                    <p class="text-muted">Share your real experience with the game — constructive criticism is encouraged, but keep it civil.</p>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-shield-lock-fill text-success" style="font-size: 2.5rem;"></i>
                    <h5 class="mt-3">No Cheating or Exploiting</h5>
                    <p class="text-muted">Do not post exploits, cheats, or illegal content that could harm the community or developers.</p>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-flag-fill text-warning" style="font-size: 2.5rem;"></i>
                    <h5 class="mt-3">Report Issues</h5>
                    <p class="text-muted">If you see something inappropriate, report it using our reporting tools instead of engaging.</p>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-emoji-smile-fill text-info" style="font-size: 2.5rem;"></i>
                    <h5 class="mt-3">Keep It Fun</h5>
                    <p class="text-muted">We’re here for games — stay on topic, enjoy discussions, and help others discover new titles.</p>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-bookmark-heart-fill text-purple" style="font-size: 2.5rem;"></i>
                    <h5 class="mt-3">Respect Copyright</h5>
                    <p class="text-muted">Do not post copyrighted materials or assets without permission from the owner.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-5">
        <a href="/" class="btn btn-lg btn-primary shadow-sm">
            <i class="bi bi-house-door-fill me-2"></i> Back to Home
        </a>
    </div>
</div>

