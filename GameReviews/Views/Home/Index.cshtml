@{
    ViewData["Title"] = "Home Page";
}

<div class="p-5 mb-4 bg-primary text-white rounded-3">
    <div class="container-fluid py-5">
        <h2 class="text-center text-light mb-4">Why Choose GameReviews?</h2>
        <p class="text-center lead">Discover, review, and share your favorite games across all platforms.</p>
        <div class="text-center mt-4">
            <a href="/Games" class="btn btn-light btn-lg">Browse Games</a>
        </div>

    </div>
</div>
<div class="container my-5">
    <h2 class="text-center text-light mb-4">Popular Genres?</h2>
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card text-white bg-dark h-100">
                <div class="card-body">
                    <h4 class="card-title">Action</h4>
                    <p class="card-text">High-octane, fast-paced games with combat and thrill.</p>
                    <a href="/Games?genre=Action" class="btn btn-outline-light">View More</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card text-white bg-dark h-100">
                <div class="card-body">
                    <h4 class="card-title">RPG</h4>
                    <p class="card-text">Story-driven adventures and deep character progression.</p>
                    <a href="/Games?genre=Role-Playing (RPG)" class="btn btn-outline-light">View More</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-4">
            <div class="card text-white bg-dark h-100">
                <div class="card-body">
                    <h4 class="card-title">Strategy</h4>
                    <p class="card-text">Plan your every move and dominate the battlefield with turn-based or real-time strategy games.</p>
                    <a href="/Games?genre=Strategy" class="btn btn-outline-light">View More</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card text-white bg-dark h-100">
                <div class="card-body">
                    <h4 class="card-title">Horror</h4>
                    <p class="card-text">Dive into terrifying worlds filled with suspense, survival, and psychological thrills.</p>
                    <a href="/Games?genre=Horror" class="btn btn-outline-light">View More</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card text-white bg-dark h-100">
                <div class="card-body">
                    <h4 class="card-title">Sports</h4>
                    <p class="card-text">Get competitive with your favorite sports — football, basketball, racing, and more.</p>
                    <a href="/Games?genre=Sports" class="btn btn-outline-light">View More</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card text-white  bg-dark h-100">
                <div class="card-body">
                    <h4 class="card-title">Puzzle</h4>
                    <p class="card-text">Challenge your mind with brain-teasing puzzles and logic-based gameplay experiences.</p>
                    <a href="/Games?genre=Puzzle" class="btn btn-outline-light">View More</a>
                </div>
            </div>
        </div>

        <!-- Add more genres -->
    </div>
</div>
<div class="container my-5">
    <h2 class="text-center text-light mb-4">Why Choose GameReviews?</h2>
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card text-white bg-dark h-100 text-center">
                <div class="card-body">
                    <i class="bi bi-controller" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-2">Massive Game Library</h5>
                    <p class="card-text">Explore games from every genre and platform.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card text-white bg-dark h-100 text-center">
                <div class="card-body">
                    <i class="bi bi-chat-square-text" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-2">User Reviews</h5>
                    <p class="card-text">Read and write detailed reviews with ratings.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card text-white bg-dark h-100 text-center">
                <div class="card-body">
                    <i class="bi bi-star-fill" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-2">Favorites</h5>
                    <p class="card-text">Save your favorite games and share your collection.</p>
                </div>
            </div>
        </div>

    </div>
</div>



